---
import { buttonClasses } from '@/lib/ui';
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  hotel: CollectionEntry<'hotels'>;
}

const { hotel } = Astro.props;
const { title, description, gallery, amenities } = hotel.data;
---

<li class="border-foreground/10 border-t">
  <article class="flex flex-col gap-8 pt-8 md:flex-row">
    <div class="relative h-64 w-full overflow-hidden rounded md:h-auto md:w-1/2">
      <Image
        src={gallery[0].url}
        alt={gallery[0].alt}
        class="h-full w-full object-cover transition-transform duration-300 hover:scale-105"
        width={800}
        height={500}
      />
    </div>
    <div class="flex w-full flex-col justify-between md:w-1/2">
      <div>
        <h3 class="text-foreground mb-4 text-2xl font-bold">{title}</h3>
        <p class="text-foreground/80 mb-6">{description}</p>
        <div class="mb-6 flex flex-wrap gap-2">
          {
            amenities &&
              amenities.map((amenity) => (
                <span class="bg-secondary/20 text-secondary rounded-full px-3 py-1 text-xs font-semibold">
                  {amenity}
                </span>
              ))
          }
        </div>
      </div>
      <div class="flex gap-4">
        <a href={`/hoteles/${hotel.id}`} class={buttonClasses.ghost}>
          Ver hotel
          <svg
            class="h-4 w-4"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
        <a href={`/reservar/${hotel.id}`} class={buttonClasses.primary}> Reservar </a>
      </div>
    </div>
  </article>
</li>
