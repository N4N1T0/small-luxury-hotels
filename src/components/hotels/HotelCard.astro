---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  hotel: CollectionEntry<'hotels'>;
}

const { hotel } = Astro.props;
const { title, description, images } = hotel.data;
---

<div class="bg-background flex h-full flex-col overflow-hidden">
  <div class="relative h-[450px] overflow-hidden">
    <Image
      src={images[0].url}
      alt={images[0].alt}
      class="h-full w-full object-cover transition-transform duration-300 hover:scale-105"
      width={300}
      height={450}
    />
  </div>

  <div class="flex max-w-[80%] flex-grow flex-col pt-5">
    <h3 class="text-foreground mb-2 text-2xl font-bold">{title}</h3>
    <p class="text-foreground/80 mb-4 flex-grow">{description}</p>

    <a
      href=`/hoteles/${hotel.id}`
      class="bg-secondary hover-200 hover:bg-secondary/80 mt-auto self-start px-4 py-2 text-base font-medium text-white no-underline"
    >
      Ver Hotel
    </a>
  </div>
</div>
