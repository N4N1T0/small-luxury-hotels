---
import type { CollectionEntry } from 'astro:content';
import RoomListCard from './RoomListCard.astro';

interface Props {
  rooms: CollectionEntry<'rooms'>[];
  title?: string;
}

const { rooms, title = 'Nuestras Habitaciones' } = Astro.props;
---

<section class="container">
  <h2 class="mb-8 text-4xl font-semibold md:text-5xl">{title}</h2>

  <div class="grid grid-cols-1 gap-8 space-y-8 md:grid-cols-2">
    {rooms.map((room) => <RoomListCard room={room} />)}
  </div>
</section>
