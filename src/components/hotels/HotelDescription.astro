---
import type { CollectionEntry } from 'astro:content';

interface Props {
  hotel: CollectionEntry<'hotels'>;
}

const { hotel } = Astro.props;
const { description, shortDescription } = hotel.data;
---

<section class="bg-background container my-8 pt-8 md:my-16 md:pt-16" id="hotel-description">
  <div class="mx-auto max-w-2xl space-y-4 text-center">
    <h2 class="text-4xl font-bold md:text-5xl">{shortDescription}</h2>
    <p class="text-lg md:text-xl">{description}</p>
  </div>
</section>

<script>
  import { animateElement } from '@/lib/scripts';

  animateElement('#hotel-description', '40px', 500);
</script>
