---
import { getAllHotels } from '@/lib/utils/hotels';
import HotelListCard from './HotelListCard.astro';

const hotels = await getAllHotels();
---

<section class="py-16" aria-labelledby="hotels-section-title">
  <div class="container-full mx-auto px-4">
    <h2 id="hotels-section-title" class="text-foreground mb-6 text-4xl font-bold md:text-5xl">
      Nuestros Hoteles
    </h2>
    <p class="text-foreground/70 mb-12 text-lg">Explora una variedad de opciones de alojamiento.</p>

    <ul class="flex flex-col gap-16" role="list" aria-label="Lista de hoteles disponibles">
      {hotels.map((hotel) => <HotelListCard hotel={hotel} />)}
    </ul>
  </div>
</section>
