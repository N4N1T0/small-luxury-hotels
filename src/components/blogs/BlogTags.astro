---
interface Props {
  tags: string[] | undefined;
  title?: string;
}

const { tags, title = 'Etiquetas' } = Astro.props;
---

{
  tags && tags.length > 0 && (
    <div class="mt-10 flex flex-col gap-4 px-4">
      <h4 class="text-foreground/70 text-center font-medium md:text-left">{title}</h4>
      <div class="flex flex-wrap gap-2" role="list" aria-label="Article tags">
        {tags.map((tag) => (
          <a
            href={`/blog/tags/${tag}`}
            class="bg-secondary text-background px-3 py-1 text-sm transition-opacity hover:opacity-90"
            role="listitem"
          >
            {tag}
          </a>
        ))}
      </div>
    </div>
  )
}
