---
import ShowMore from '@/components/ui/ShowMore.astro';
import FeaturedBlogCard from './FeaturedBlogCard.astro';
import { getFeaturedBlogs } from '@/lib/fetchers/blog';

const featuredBlogs = await getFeaturedBlogs(2);
---

<section class="container my-16 py-16" aria-labelledby="featured-section">
  <span id="show-more-featured-blogs">
    <ShowMore
      title="Artículos Destacados"
      subtitle="conoces nuestros artículos mejor valorados"
      className="pb-4"
    />
  </span>
  <div class="grid gap-8 md:grid-cols-2">
    {featuredBlogs.map((blog) => <FeaturedBlogCard blog={blog} />)}
  </div>
</section>

<script>
  import { animateElement, animateElements } from '@/lib/scripts';

  animateElement('#show-more-featured-blogs', '0', 500);
  animateElements('#featured-blog-card', '40px', 100, 200);
</script>
