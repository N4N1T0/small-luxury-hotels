---
import type { RoomEntry } from '@/lib/fetchers/rooms';

interface Props {
  room: RoomEntry | undefined;
}

const { room } = Astro.props;

if (!room) {
  throw new Error('Room not found');
}

const { title, description } = room?.data;
---

<section class="w-full py-16" id="room-description">
  <div class="container mx-auto flex flex-col items-center">
    <h2 class="mb-4 text-center text-2xl font-semibold md:text-3xl">{title}</h2>
    <p class="text-background-700 max-w-2xl text-center text-base font-light md:text-lg">
      {description}
    </p>
  </div>
</section>

<script>
  import { animateElement } from '@/lib/scripts';

  animateElement('#room-description', '0', 500);
</script>
