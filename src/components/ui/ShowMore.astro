---
import { buttonClasses } from '@/components/ui/ui';

interface Props {
  title: string;
  subtitle?: string;
  showMoreUrl?: string;
  preTitle?: string;
  showMoreLabel?: string;
}

const { title, subtitle, showMoreUrl, showMoreLabel, preTitle } = Astro.props;
---

<div class="flex w-full flex-col items-start justify-between pb-4 md:flex-row md:items-center">
  <div class="mb-12 text-center md:text-left">
    {preTitle && <p class="text-foreground/80 font-hum mb-2 text-lg">{preTitle}</p>}
    <h2 class="text-foreground mb-4 text-4xl font-semibold md:text-5xl">{title}</h2>
    {subtitle && <p class="text-foreground/80 font-hum text-lg">{subtitle}</p>}
  </div>
  {
    showMoreUrl && (
      <a href={showMoreUrl} class={buttonClasses.primary}>
        {showMoreLabel || 'Ver Todos'}
      </a>
    )
  }
</div>
