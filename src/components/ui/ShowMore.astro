---
import { buttonClasses, cn } from '@/lib/ui';

interface Props {
  title: string;
  subtitle?: string;
  showMoreUrl?: string;
  preTitle?: string;
  showMoreLabel?: string;
  className?: string;
}

const { title, subtitle, showMoreUrl, showMoreLabel, preTitle, className } = Astro.props;
---

<div
  class={cn(
    'flex w-full flex-col items-center justify-between pb-16 md:flex-row md:pb-8 show-more',
    className
  )}
>
  <div class="mb-8 text-center md:text-left">
    {preTitle && <p class="text-secondary/80 mb-2 text-lg">{preTitle}</p>}
    <h2 class="text-main mb-4 text-4xl font-semibold md:text-5xl">{title}</h2>
    {subtitle && <p class="text-foreground/80 text-lg font-normal">{subtitle}</p>}
  </div>
  {
    showMoreUrl && (
      <a href={showMoreUrl} class={buttonClasses.primary}>
        {showMoreLabel || 'Ver Todos'}
      </a>
    )
  }
</div>
