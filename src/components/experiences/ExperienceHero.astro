---
import { Image } from 'astro:assets';

interface Props {
  title?: string;
  subtitle?: string;
  image?: string;
  imageAlt?: string; // Added alt text prop
}

const isSingleExperience = Astro.url.pathname.endsWith('/experiencias');

const {
  title = 'Descubre experiencias Ãºnicas en nuestros hoteles',
  subtitle = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut et massa mi. Aliquam in hendrerit urna. Pellentesque sit amet sapien fringilla, mattis ligula consectetur, ultrices mauris. Maecenas vitae mattis tellus.',
  image = 'https://placehold.co/1800x800',
  imageAlt = 'Experiencia de lujo' // Default alt text
} = Astro.props;
---

<section
  class="bg-main text-background flex flex-col items-center pt-28 pb-8 md:pb-16"
  role="region"
  aria-label="Experience Hero Section"
>
  <div class="container">
    <div
      class="mx-auto mb-12 max-w-3xl text-center"
      style={{ display: isSingleExperience ? 'block' : 'none' }}
      aria-hidden={!isSingleExperience}
    >
      <h1
        class="animate-fade-in-up animate-delay-150 mb-6 text-4xl font-bold md:text-5xl"
        tabindex={isSingleExperience ? '0' : '-1'}
      >
        {title}
      </h1>
      <p
        class="text-background/80 animate-fade-in-up animate-delay-250 mx-auto max-w-2xl text-lg leading-relaxed font-light"
        tabindex={isSingleExperience ? '0' : '-1'}
      >
        {subtitle}
      </p>
    </div>

    <div
      class="mx-auto aspect-square h-auto w-full overflow-hidden md:h-[600px]"
      style={{ display: isSingleExperience ? 'none' : 'block' }}
      aria-hidden={isSingleExperience}
    >
      <Image
        src={image}
        alt={imageAlt}
        class="animate-fade-in animate-delay-400 size-full rounded-none object-cover"
        width={1200}
        height={600}
        loading="eager"
        densities={[1, 2]}
        role="img"
      />
    </div>
  </div>
</section>
