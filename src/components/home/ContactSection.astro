---
import { contactInfo } from '@/data/site-data';
import ShowMore from '@/components/ui/ShowMore.astro';
---

<section class="py-16 md:py-24">
  <div class="container mx-auto px-4">
    <ShowMore
      title={contactInfo.title}
      subtitle={contactInfo.subtitle}
      showMoreLabel="Reservar"
      showMoreUrl="/"
    />

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
      <!-- Email Section -->
      <div class="flex flex-col items-start">
        <div class="text-main mb-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="48"
            height="48"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <rect width="20" height="16" x="2" y="4" rx="2"></rect>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
          </svg>
        </div>
        <h3 class="mb-2 text-2xl font-semibold">{contactInfo.email.title}</h3>
        <p class="text-foreground/80 mb-4">{contactInfo.email.description}</p>
        <a
          href={`mailto:${contactInfo.email.address}`}
          class="text-secondary hover-200 hover:underline"
        >
          {contactInfo.email.address}
        </a>
      </div>

      <!-- Social Media Section -->
      <div class="flex flex-col items-start">
        <div class="text-main mb-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="48"
            height="48"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M14 9a2 2 0 0 1-2 2H6l-4 4V4c0-1.1.9-2 2-2h8a2 2 0 0 1 2 2v5Z"></path>
            <path d="M18 9h2a2 2 0 0 1 2 2v11l-4-4h-6a2 2 0 0 1-2-2v-1"></path>
          </svg>
        </div>
        <h3 class="mb-2 text-2xl font-semibold">{contactInfo.social.title}</h3>
        <p class="text-foreground/80 mb-4">{contactInfo.social.description}</p>
        <div class="flex space-x-4">
          {
            contactInfo.social.networks.map((network) => (
              <a
                href={network.url}
                class="text-main hover-200 hover:text-secondary"
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`VisÃ­tanos en ${network.name}`}
              >
                {network.name === 'Facebook' && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" />
                  </svg>
                )}
                {network.name === 'Instagram' && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5" />
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" />
                  </svg>
                )}
                {network.name === 'Twitter' && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z" />
                  </svg>
                )}
                {network.name === 'LinkedIn' && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
                    <rect x="2" y="9" width="4" height="12" />
                    <circle cx="4" cy="4" r="2" />
                  </svg>
                )}
                {network.name === 'YouTube' && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z" />
                    <polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02" />
                  </svg>
                )}
              </a>
            ))
          }
        </div>
      </div>

      <!-- Phone Section -->
      <div class="flex flex-col items-start">
        <div class="text-main mb-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="48"
            height="48"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
            ></path>
          </svg>
        </div>
        <h3 class="mb-2 text-2xl font-semibold">{contactInfo.phone.title}</h3>
        <p class="text-foreground/80 mb-4">{contactInfo.phone.description}</p>
        <div class="flex flex-col space-y-2">
          {
            contactInfo.phone.numbers.map((phone) => (
              <a href={`tel:${phone.value}`} class="text-secondary hover-200 hover:underline">
                {phone.label}
              </a>
            ))
          }
        </div>
      </div>

      <!-- Location Section -->
      <div class="flex flex-col items-start">
        <div class="text-main mb-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="48"
            height="48"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
        </div>
        <h3 class="mb-2 text-2xl font-semibold">{contactInfo.location.title}</h3>
        <p class="text-foreground/80 mb-4">{contactInfo.location.description}</p>
        <a href={contactInfo.location.link} class="text-secondary hover-200 hover:underline">
          Ubicaciones
        </a>
      </div>
    </div>
  </div>
</section>
