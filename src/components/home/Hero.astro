---
import { HeroHome } from '@/assets';
import { Image } from 'astro:assets';

interface Props {
  backgroundImage?: ImageMetadata;
  title: string;
  subtitle: string;
  showCTA?: boolean;
}

const { backgroundImage, title, subtitle, showCTA = true } = Astro.props;
---

<section class="relative flex h-screen items-center justify-center">
  <Image
    src={backgroundImage || HeroHome}
    alt="Una vista de la Habana Vieja"
    loading="eager"
    class="animate-fade-in animate-delay-100 absolute inset-0 h-full w-full object-cover"
  />
  <div class="absolute inset-0 bg-black/50"></div>

  <div
    class="animate-fade-in-up animate-delay-700 relative z-10 mx-auto max-w-[800px] px-4 text-center"
  >
    <h1 class="mb-6 text-5xl font-bold text-white uppercase md:text-6xl">{title}</h1>
    <p class="mb-8 text-xl text-white/90 md:text-2xl">{subtitle}</p>

    {
      showCTA && (
        <a
          href="/reservar"
          class="bg-secondary inline-block rounded px-8 py-3 text-lg font-medium text-white no-underline transition-colors hover:bg-[#a87d3e]"
        >
          Reservar
        </a>
      )
    }
  </div>
</section>
