---
import Layout from '@/layouts/Layout.astro';
import Hero from '@/components/home/Hero.astro';
import FeaturedHotel from '@/components/shared/FeaturedHotel.astro';
import HotelList from '@/components/hotels/HotelList.astro';
import BlogCarousel from '@/components/shared/blog-carousel/BlogCarousel.astro';
import BookingForm from '@/components/hotels/preact-hotel/BookingForm';
import { getAllHotels } from '@/lib/fetchers/hotels';

const heroInfo = {
  title: 'Nuestros Hoteles',
  subtitle: 'Descubre el lujo y el confort en cada rincón de Cuba'
};

const hotels = await getAllHotels();
---

<Layout
  title="Hoteles | Small Luxury Hotels of Cuba"
  description="Lista de los hoteles del gran Small Luxury Hotels de Cuba. Conoce nuestros hoteles de lujo y encuentra tu estancia perfecta en Cuba. Reserva ahora mismo y descubre el lujo y el confort en cada rincón de Cuba."
  type="hotelList"
  data={hotels}
>
  <Hero {...heroInfo} />
  <BookingForm className="py-16" hotels={hotels} client:load />
  <FeaturedHotel />
  <HotelList />
  <BlogCarousel />
</Layout>
