---
import Layout from '@/layouts/Layout.astro';
import HotelCarousel from '@/components/hotels/HotelCarousel.astro';
import FeatureSection from '@/components/home/FeatureSection.astro';
import Locations from '@/components/shared/preact-shared/LocationMap';
import Hero from '@/components/home/Hero.astro';
import DescriptionCta from '@/components/home/DescriptionCta.astro';
import BlogCarousel from '@/components/shared/blog-carousel/BlogCarousel.astro';
import PressCarousel from '@/components/shared/press-carousel/PressCarousel.astro';
import FeaturedHotel from '@/components/shared/FeaturedHotel.astro';
import ContactSection from '@/components/home/ContactSection.astro';
import ExperiencesCarousel from '@/components/home/ExperiencesCarousel.astro';
import { getAllHotels } from '@/lib/fetchers/hotels';

// CONST
const hotels = await getAllHotels();

const heroInfo = {
  title: 'ELEGANTS HOTELS OF CUBA',
  subtitle:
    'En nuestro grupo, nos dedicamos a ofrecerte estancias inolvidables en los mejores destinos. Cada hotel está diseñado para brindarte comodidad y experiencias memorables.'
};

const descriptionContent = {
  title: 'Elegant Hotels of Cuba',
  description:
    'En nuestro grupo, nos dedicamos a ofrecerte estancias inolvidables en los mejores destinos. Cada hotel está diseñado para brindarte comodidad y experiencias memorables.',
  cta: {
    primary: {
      text: 'Reservar ahora',
      url: '/hoteles'
    },
    secondary: {
      text: 'Conocer más',
      url: '/hoteles'
    }
  }
};
---

<Layout>
  <Hero {...heroInfo} />
  <DescriptionCta {...descriptionContent} />
  <HotelCarousel />
  <FeatureSection />
  <ExperiencesCarousel />
  <Locations client:only={true} hotels={hotels} />
  <PressCarousel />
  <FeaturedHotel />
  <BlogCarousel />
  <ContactSection />
</Layout>
