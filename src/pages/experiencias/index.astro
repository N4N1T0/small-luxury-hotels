---
import TwoColumns from '@/components/shared/TwoColumns.astro';
import BlogCarousel from '@/components/shared/blog-carousel/BlogCarousel.astro';
import ExperiencesGrid from '@/components/experiences/preact-experiences/ExperiencesGrid';
import ExperienceLayout from '@/layouts/ExperienceLayout.astro';
import { getAllExperiences } from '@/lib/fetchers/experiences';

const experiences = await getAllExperiences();

const twoColumnsInfo = {
  title: 'Experiencias Exclusivas',
  description:
    'Descubre momentos únicos y memorables en nuestros hoteles boutique. Desde escapadas románticas hasta aventuras culinarias, cada experiencia está diseñada para crear recuerdos inolvidables.'
};
---

<ExperienceLayout>
  <TwoColumns {...twoColumnsInfo} />
  <ExperiencesGrid experiences={experiences} client:load />
  <BlogCarousel />
</ExperienceLayout>
