---
import Head from '@/components/hotels/Head.astro';
import Footer from '@/components/layout/Footer.astro';
import MobileNavbar from '@/components/layout/MobileNavbar.astro';
import Navbar from '@/components/layout/Navbar.astro';
import '@/styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="es">
  <Head title={title} description={description} image={image} />
  <body class="font font-inter relative overflow-x-hidden">
    <Navbar />
    <MobileNavbar />
    <main class="bg-background overflow-x-hidden">
      <slot />
    </main>
    <Footer />
  </body>
</html>
